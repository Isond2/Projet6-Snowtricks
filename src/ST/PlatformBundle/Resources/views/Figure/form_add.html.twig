{% extends '::base.html.twig' %}
{% block body%}

<div class="container">

<h3>Ajouter une figure</h3>
  {{ form_start(form) }}
  {% form_theme form 'jquery.collection.html.twig' %}

    <div class="form-group">
            {{ form_errors(form.nom) }}
            {{ form_label(form.nom, 'Nom de la figure :', {'label_attr': {'class': 'foo'}}) }}
            {{ form_widget(form.nom, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div class="form-group">
            {{ form_errors(form.description) }}
            {{ form_label(form.description, 'Description :', {'label_attr': {'class': 'foo'}}) }}
            {{ form_widget(form.description, { 'attr': {'class': 'form-control'} }) }}
    </div>


    <div class="form-group">
            {{ form_errors(form.groupe) }}
            {{ form_label(form.groupe, 'Groupe :', {'label_attr': {'class': 'foo'}}) }}
            {{ form_widget(form.groupe, { 'attr': {'class': 'form-control'} }) }}
    </div>

    <div>
            {{ form_errors(form.image) }}
            {{ form_widget(form.image) }}
    </div>

    <div>
            {{ form_errors(form.video) }}
            {{ form_widget(form.video) }}
    </div>

    <input type="submit" value="Ajouter la figure" class="btn btn-primary" />
    <div class="display_none">{{ form_rest(form) }}</div>

	</div>

     <script src="{{ asset('js/jquery-3.3.1.js') }}"></script>
    <script src="{{ asset('js/jquery.collection.js') }}"></script>

    <script type="text/javascript">
    $('.my-selector').collection({
            init_with_n_elements: 1,
            max: 10,
            allow_up: false,
            allow_down: false,
            add: '<a href="#" class="btn btn-default"><span class="glyphicon glyphicon-plus-sign"></span></a>',
            remove: '<a href="#" class="btn btn-default"><span class="glyphicon glyphicon-trash"></span></a>',
        });
    </script>

{% endblock %}